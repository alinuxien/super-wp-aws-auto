input {
    beats {
        port => "5044"
    }
}
filter {
    grok {
      match => {
          "message" => "%%{COMBINEDAPACHELOG}"
      }    
    }
    geoip {
        source => "clientip"
    }
}
output {
    elasticsearch {
        hosts => [ "${elasticsearch_endpoint}" ]
        ilm_enabled => false
        index => "logstash-%%{+YYYY.MM.dd}"
    }
}

